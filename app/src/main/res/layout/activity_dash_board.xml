<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                style="@style/DashboardLinerLayout">

                <Button
                    android:id="@+id/home_activity_btn_create_login"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_login_create"
                    android:onClick="onButtonClicker"
                    android:text="@string/createLoginIconText"
                    />

                <Button
                    android:id="@+id/home_activity_btn_add_flat"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_add_flat"
                    android:onClick="onButtonClicker"
                    android:text="@string/addFlatIconText"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/DashboardLinerLayout">

                <Button
                    android:id="@+id/home_activity_btn_add_user"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_add_user"
                    android:onClick="onButtonClicker"
                    android:text="@string/addUserIconText"
                    />


                <Button
                    android:id="@+id/home_activity_btn_view_all_login"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_view_all_logins"
                    android:onClick="onButtonClicker"
                    android:text="@string/viewAllLoginIconText"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/DashboardLinerLayout">

                <Button
                    android:id="@+id/home_activity_btn_view_all_flat"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_view_all_flat"
                    android:onClick="onButtonClicker"
                    android:text="@string/viewAllFlatIconText"
                    />

                <Button
                    android:id="@+id/home_activity_btn_manage_users"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_manage_user"
                    android:onClick="onButtonClicker"
                    android:text="@string/manageUsersIconText"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/DashboardLinerLayout">

                <Button
                    android:id="@+id/home_activity_btn_transaction_view"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_transaction_home"
                    android:onClick="onButtonClicker"
                    android:text="@string/transaction_home_button_text"
                    />

                <Button
                    android:id="@+id/home_activity_btn_detail_transactions"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_detail_transactions"
                    android:onClick="onButtonClicker"
                    android:text="@string/detailTransactionsIconText"
                    />

                <!--Button
                    android:id="@+id/transaction_report_activity_btn_save_verified_transactions"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_verified_transactions"
                    android:onClick="onButtonClicker"
                    android:text="@string/verifiedTransactionsIconText"
                    /-->



            </LinearLayout>

            <LinearLayout
                style="@style/DashboardLinerLayout">

                <Button
                    android:id="@+id/home_activity_btn_flat_wise_payable"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_flat_wise_payable"
                    android:onClick="onButtonClicker"
                    android:text="@string/generateMaintenanceIconText"
                    />

                <!--Button
                    android:id="@+id/home_activity_btn_my_transactions"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_my_expense"
                    android:onClick="onButtonClicker"
                    android:text="@string/myExpensesIconText"
                    /-->

                <Button
                    android:id="@+id/home_activity_btn_my_dues"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_my_dues"
                    android:onClick="onButtonClicker"
                    android:text="@string/myDuesIconText"
                    />

                <!--Button
                    android:id="@+id/home_activity_btn_send_notification"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_notification"
                    android:onClick="onButtonClicker"
                    android:text="@string/notificationIconText"
                    /-->



                <!--Button
                    android:id="@+id/home_activity_btn_expenditure_type"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_expenditure_type"
                    android:onClick="onButtonClicker"
                    android:text="@string/expenditureTypeIconText"
                    /-->
            </LinearLayout>

            <LinearLayout
                style="@style/DashboardLinerLayout">

                <Button
                    android:id="@+id/home_activity_btn_user_expense"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_my_expense"
                    android:onClick="onButtonClicker"
                    android:text="@string/myExpenseIconText"
                    />

                <Button
                    android:id="@+id/home_activity_btn_validate_user_expense"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_user_expend"
                    android:onClick="onButtonClicker"
                    android:text="@string/validateUserExpenseIconText"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/DashboardLinerLayout">

                <Button
                    android:id="@+id/home_activity_btn_view_split_transaction"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_split_transaction"
                    android:onClick="onButtonClicker"
                    android:text="@string/splitTransactionText"
                    />

                <Button
                    android:id="@+id/home_activity_btn_save_splitted_transactions"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_save_splitted_transactions"
                    android:onClick="onButtonClicker"
                    android:text="@string/saveSplitTransactionText"
                    />

            </LinearLayout>

            <LinearLayout
                style="@style/DashboardLinerLayout">

                <Button
                    android:id="@+id/home_activity_btn_view_auto_split_verify"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_manual_split"
                    android:onClick="onButtonClicker"
                    android:text="@string/splitTransactionText"
                    />

                <Button
                    android:id="@+id/home_activity_btn_save_manual_split"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_varified_credit"
                    android:onClick="onButtonClicker"
                    android:text="@string/saveSplitTransactionText"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
