<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="bhowa.app.UploadPDfActivity">

    <TextView android:text="@string/uploadPdfText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadTextLevel" />

    <TextView android:text="selected file path" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_path"
        android:layout_below="@+id/browse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload PDF file"
        android:id="@+id/browse"
        android:layout_marginTop="46dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
