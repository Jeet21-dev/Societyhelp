<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_left_margin"
    tools:context="societyhelp.app.AddUserActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="User Id"
            android:ems="20"
            android:id="@+id/userIdText_AUA"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:inputType="text"
            android:digits="0123456789qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="text"
            android:hint="Name"
            android:id="@+id/nameText_AUA"
            android:layout_below="@+id/loginIdSpinner_AUA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:digits="qwertzuiopasdfghjklyxcvbnm ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="Name alias (comma separated)"
            android:id="@+id/nameAliasText_AUA"
            android:layout_below="@+id/flatNoText_AUA"
            android:layout_toRightOf="@+id/vsHeader"
            android:layout_toEndOf="@+id/vsHeader"
            android:digits="qwertzuiopasdfghjklyxcvbnm,ABCDEFGHIJKLMNOPQRSTUVWXYZ " />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="text"
            android:hint="User Mobile No."
            android:id="@+id/mobileNoText_AUA"
            android:layout_below="@+id/nameAliasText_AUA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:digits="0123456789"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="text"
            android:hint="Alternate Mobile No."
            android:id="@+id/mobileNoAlternateText_AUA"
            android:layout_below="@+id/mobileNoText_AUA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:digits="0123456789"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="20"
            android:hint="Email Id"
            android:id="@+id/emailIdText_AUA"
            android:layout_below="@+id/mobileNoAlternateText_AUA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="text"
            android:hint="Address"
            android:id="@+id/AddressText_AUA"
            android:layout_below="@+id/emailIdText_AUA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:digits="qwertzuiopasdfghjklyxcvbnm ABCDEFGHIJKLMNOPQRSTUVWXYZ,#-0123456789"/>

        <Spinner
            android:hint="User Type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userTypeSpinner_AUA"
            android:layout_below="@+id/userIdText_AUA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:dropDownWidth="200dp"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>


        <Spinner
            android:hint="Flat Ids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flatIdSpinner_AUA"
            android:layout_below="@+id/userTypeSpinner_AUA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:dropDownWidth="200dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

        <Spinner
            android:hint="Login Ids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginIdSpinner_AUA"
            android:layout_below="@+id/flatIdSpinner_AUA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:dropDownWidth="200dp"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="20"
            android:hint="Flat Join Date"
            android:id="@+id/flatJoinDateText_AUA"
            android:layout_below="@+id/AddressText_AUA"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:dateTextAppearance="@android:style/TextAppearance.Large.Inverse"
            android:digits="0123456789/"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="20"
            android:hint="Flat Left Date"
            android:id="@+id/flatLeftDateText_AUA"
            android:layout_below="@+id/flatJoinDateText_AUA"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:dateTextAppearance="@android:style/TextAppearance.Large.Inverse"
            android:digits="0123456789"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addUserBtn_AUA"
            android:text="Add user" />
    </LinearLayout>
</ScrollView>
