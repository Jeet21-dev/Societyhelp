<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bhowa.app" >

    <!-- To access internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- TO access storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" >
        </activity>

        <activity
            android:name=".ManageUserActivity"
            android:label="@string/title_activity_manage_user" >
        </activity>
        <activity
            android:name=".ManageExpenditureTypeActivity"
            android:label="@string/title_activity_manage_expenditure_type" >
        </activity>
        <activity
            android:name=".ViewRawTransactionDataActivity"
            android:label="@string/title_activity_view_raw_transaction_data" >
        </activity>
        <activity
            android:name=".MyTransactionsActivity"
            android:label="@string/title_activity_my_transactions" >
        </activity>
        <activity
            android:name=".NotificationActivity"
            android:label="@string/title_activity_notification" >
        </activity>
    </application>

</manifest>
