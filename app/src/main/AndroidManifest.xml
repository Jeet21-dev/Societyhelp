<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bhowa.app" >

    <!-- To access internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- TO access storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FileBrowserActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".HomeTransactionActivity" />
        <activity android:name=".ManageUserActivity" />
        <activity android:name=".ManageExpenditureTypeActivity" />
        <activity android:name=".MyTransactionsActivity" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".TransactionRawDataActivity" />
        <activity android:name=".ViewRawDataActivity" />
        <activity android:name=".MapUserToNameAlias" />
        <activity android:name=".UserAliasMappingActivity" />
        <activity android:name=".AddUserActivity" />
        <activity
            android:name=".CreateLoginIdActivity"
            android:label="@string/title_activity_create_login_id" >
        </activity>
        <activity
            android:name=".AddFlatDetailsActivity"
            android:label="@string/title_activity_add_flat_details" >
        </activity>
    </application>

</manifest>
